<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:background="@drawable/input_text"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPolice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.5dp"
            android:textSize="16dp"
            android:text="Manzi Roger Asua"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/tvPost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Kayonza"
            android:visibility="visible"
            android:gravity="center_horizontal"/>

    </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvWeaponTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Weapon"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvWorkdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Workdate"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/tvWeapon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Pistol- KA23"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvWorkdateOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="2020-12-12"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"/>


            <TextView
                android:id="@+id/tvReturned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Returned on"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvAssigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="Assigned on"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvReturnedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="2020-12-12"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/tvAssignedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="2020-12-12"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"/>
        </GridLayout>

    <Button
        android:id="@+id/btnAssign"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginRight="25dp"
        android:background="@color/colorPrimaryDark"
        android:text="Give"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>
    </LinearLayout>